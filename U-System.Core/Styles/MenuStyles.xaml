<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:U_System.Core.Styles">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/U-System.Core;component/Styles/Colores.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="MenuStyle" TargetType="{x:Type Menu}">
        <Setter Property="Height" Value="28"/>
        <Setter Property="Background" Value="{DynamicResource APP.MAINCOLOR}"/>
        <Setter Property="Foreground" Value="#ececec"/>
    </Style>
    
</ResourceDictionary>
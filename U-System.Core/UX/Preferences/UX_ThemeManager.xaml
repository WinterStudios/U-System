<UserControl x:Class="U_System.Core.UX.Preferences.UX_ThemeManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:U_System.Core.UX.Preferences"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{DynamicResource Theme.Background}">
   
    <Grid>
        <ComboBox x:Name="UC_ComboBox_Theme" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="130" DisplayMemberPath="Name"/>
        <Border HorizontalAlignment="Center" Width="100" Height="30" BorderThickness="1" Background="{DynamicResource APP.MAINCOLOR}" BorderBrush="Black" />
    </Grid>
</UserControl>
